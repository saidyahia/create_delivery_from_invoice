<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="customer_invoice_stock_move_view" model="ir.ui.view">
        <field name="name">Move Name</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button type="object"
                            name="action_view_delivery"
                            class="oe_stat_button"
                            invisible="move_type not in ('out_invoice') or not delivery_count > 0"
                            icon="fa-truck">
                        <field name="delivery_count" string="Delivery Order" widget="statinfo"/>
                    </button>
                </xpath>

                <field name="payment_reference" position="after">
                    <field name="auto_create_delivery" invisible="move_type not in ('out_invoice')"/>

                    <field name="picking_type_id" invisible="move_type not in ('out_invoice')"
                           required="move_type not in ('out_invoice')"
                    />
                    <field name="auto_validate_delivey" invisible="move_type not in ('out_invoice') "/>

                </field>

            </data>
        </field>
    </record>


</odoo>
